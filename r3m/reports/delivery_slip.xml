<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="delivery_slip_inherit" inherit_id="stock.report_delivery_document">
            <xpath expr="//t[@name='lot_serial']" position="after">
                <t if="has_serial_number">
                    <th>Peso:</th>
                </t>
            </xpath>
            <xpath expr="//t[@name='no_package_move_lines']/t[2]/tr" position="after">
                <tr>
                    <td rowspan="4">
                        <strong>Total:</strong>
                    </td>
                    <td></td>
                    <td>
                        <span t-esc="sum(o.move_line_ids.mapped('lot_id').mapped('kilos'))"/>
                    </td>
                </tr>
            </xpath>
        </template>
        <template id="stock_move_line_inherit" inherit_id="stock.stock_report_delivery_has_serial_move_line">
            <xpath expr="//t[@name='move_line_lot']" position="inside">
                <td>
                    <span t-field="move_line.lot_id.kilos"/>
                </td>
            </xpath>
        </template>

    </data>
</odoo>